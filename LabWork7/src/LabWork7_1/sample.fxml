<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<VBox fx:controller="LabWork7_1.Controller" xmlns:fx="http://javafx.com/fxml" spacing="20" alignment="center">
    <HBox alignment="center">
        <Text text="Введите коэффициенты" scaleX="1.5" scaleY="1.5"/>
    </HBox>
    <HBox alignment="center">
        <TextField maxWidth="60" minWidth="60" fx:id="a"/>
        <Text text="X^2 + "/>
        <TextField maxWidth="60" minWidth="60" fx:id="b"/>
        <Text text="X + "/>
        <TextField maxWidth="60" minWidth="60" fx:id="c"/>
        <Text text=" = 0"/>
    </HBox>
    <HBox alignment="center">
        <Text text="  Корни: x1 = "/>
        <Text fx:id="solution1"/>
        <Text text=" и x2 = "/>
        <Text fx:id="solution2"/>
    </HBox>
    <HBox alignment="center">
        <Text text="  Дискриминант = "/>
        <Text fx:id="discriminant"/>
    </HBox>
    <HBox alignment="CENTER">
    <Button text="Решайтес" fx:id="solve" onAction="#click"/>
    </HBox>
</VBox>